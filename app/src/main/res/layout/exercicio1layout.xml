<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="false">

    <View
        android:id="@+id/bar1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" />

    <View
        android:id="@+id/bar2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bar1"
        android:background="#F30000" />

    <View
        android:id="@+id/bar3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bar2"
        android:background="#FFEB3B" />

    <View
        android:id="@+id/bar4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bar3"
        android:background="#00BCD4" />

    <View
        android:id="@+id/bar5"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bar4"
        android:background="#4CAF50" />

    <View
        android:id="@+id/bar6"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bar5"
        android:background="#9C27B0" />

    <View
        android:id="@+id/bar7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#3F51B5" />

    <View
        android:id="@+id/bar8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/bar7"
        android:background="#FFFFFF" />

    <View
        android:id="@+id/bar9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/bar8"
        android:background="#673AB7" />

    <View
        android:id="@+id/bar10"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/bar9"
        android:background="#000000" />
</RelativeLayout>